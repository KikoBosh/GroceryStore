@model IEnumerable<GroceryStore.Models.ShoppingCart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@User.Identity.Name</h2>


<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ShoppingCartId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ShoppingCartId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ShoppingCartId })
        </td>
    </tr>
}

</table>
